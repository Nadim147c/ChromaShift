{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": { "type": "string" },
    "stderr": { "type": "boolean" },
    "skip-color": {
      "type": "object",
      "properties": {
        "argument": { "type": "string" },
        "arguments": { "type": "string" }
      },
      "additionalProperties": false
    },
    "rules": {
      "type": "array",
      "items": {
        "properties": {
          "regexp": {
            "type": "string"
          },
          "colors": {
            "type": "string"
          },
          "overwrite": {
            "type": "boolean",
            "default": "true"
          },
          "priority": {
            "type": "integer",
            "default": 0
          },
          "type": {
            "type": "string",
            "default": "",
            "enum": ["path"]
          }
        },
        "required": ["regexp", "colors"],
        "additionalProperties": false
      }
    },
    "additionalProperties": false
  },
  "additionalProperties": false
}
