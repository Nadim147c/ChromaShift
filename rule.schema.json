{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": { "type": "string" },
    "stderr": { "type": "boolean" },
    "pty": { "type": "boolean" },
    "rules": {
      "type": "array",
      "items": {
        "oneOf": [{ "required": ["colors"] }, { "required": ["type"] }],
        "properties": {
          "regexp": {
            "type": "string"
          },
          "colors": {
            "pattern": "^( ?((reset|bold|underline|blink|reverse|conceal|path)|((bg)?(black|red|green|yellow|blue|magenta|cyan|white|gray))) ?,?)+$"
          },
          "overwrite": {
            "type": "boolean",
            "default": "true"
          },
          "priority": {
            "type": "integer",
            "default": 0
          }
        },
        "additionalProperties": false
      }
    },
    "additionalProperties": false
  },
  "additionalProperties": false
}
